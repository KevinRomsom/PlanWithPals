@model Models.Activity


@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Activity";
}

<h2 style="text-align: center">Activity</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
